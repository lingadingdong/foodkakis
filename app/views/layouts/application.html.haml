!!!
%html
%head
  %title FoodKakis
  = stylesheet_link_tag    'application', media: 'all'
  = javascript_include_tag 'application'
  %link{:rel => "stylesheet", :href => "http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css"}
  %link{:rel => "stylesheet", :href => "http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css"}
  = csrf_meta_tags
%body
  %header
    .wrapper.clearfix
      #logo
        = link_to root_path do
          = image_tag '/assets/home.png', width: 50, height: 50, alt: 'FoodKakis'
      %nav
        - if user_signed_in?
          = link_to new_post_path do
            = image_tag '/assets/idea.png', width: 50, height: 50, alt: "Share the lobang!"
          = link_to edit_user_registration_path do
            = image_tag '/assets/user.png', width: 50, height: 50, alt: current_user.name
          = link_to destroy_user_session_path, method: :delete do
            = image_tag '/assets/logout.png', width: 50, height: 50, alt: "logout"

        - else
          = link_to new_user_session_path do
            = image_tag '/assets/user.png', width: 50, height: 50, alt: "Sign In"

  %p.notice= notice
  %p.alert= alert
  .wrapper
    = yield